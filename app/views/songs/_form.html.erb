<%= form_for(@song) do |f| %>

  <% if @song.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
    <% end %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.select :artist_id, Artist.all.collect{|a| [a.name, a.id]} %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>