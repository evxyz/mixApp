<%- model_class = @artist.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @artist.name %>
</p>

<p>
  <strong>Songs</strong><br>
  <div id="songs">
    <%# @artist.songs.each do |song| %>
      <!-- <li><%#= link_to song.name, song %></li> -->
    <%# end %>

    <%# @artist.songs.each do |song| %>
      <%#= render 'songs/song_li', :song => song %>
    <%# end %>
    <%= render({:partial => 'songs/song_li', :collection => @artist.songs, :as => :song}) %>
    <%= render @artist.songs %>
  </div>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              artists_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_artist_path(@artist), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              artist_path(@artist),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
