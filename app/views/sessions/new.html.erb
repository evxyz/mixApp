
<h1>Login</h1>
<%= form_tag login_path, :method => :post do %>
  <div class="control-group">
    <%= label_tag 'Email' %>
    <div class="controls">
      <%= text_field_tag :email %>
    </div>
  </div>

  <div class="control-group">
    <%= label_tag 'Password' %>
    <div class="controls">
      <%= password_field_tag :password %>
    </div>
  </div>

  <%= submit_tag %>
<% end %>