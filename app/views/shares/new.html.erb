<%= form_tag mixtape_shares_path(@mixtape), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= label_tag "Email" %>
    <div class="controls">
      <%= text_field_tag :email %>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag "Share", :class => 'btn btn-primary' %>
  </div>
<% end %>
